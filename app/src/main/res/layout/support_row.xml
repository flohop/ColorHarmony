<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/support_row_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/support_row_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:autoSizeMaxTextSize="30sp"
        android:text="TextView"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/support_row_icon"
        app:layout_constraintEnd_toStartOf="@+id/support_row_price"
        app:layout_constraintStart_toEndOf="@+id/support_row_icon"
        app:layout_constraintTop_toTopOf="@+id/support_row_icon" />

    <TextView
        android:id="@+id/support_row_price"
        android:layout_width="95dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textColor="@color/Brown"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="25sp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/support_row_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/support_row_text"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>