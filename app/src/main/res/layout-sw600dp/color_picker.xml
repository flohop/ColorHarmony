<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="528dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/harmonyPicker" />

    <TextView
        android:id="@+id/colorText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="none"
        android:text="@string/pick_color"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/colorView"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/colorView2"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/colorView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/colorView3"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/colorView2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/colorView4"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/colorView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/harmonyPicker"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/tacticInfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/tacticInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="6dp"
        android:layout_weight="1"
        android:background="@drawable/circle"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_info_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/harmonyPicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/harmonyPicker" />

    <ImageButton
        android:id="@+id/savePalette"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle"
        android:clickable="false"
        android:focusable="false"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_save_white_48dp"
        app:layout_constraintBottom_toBottomOf="@+id/colorView4"
        app:layout_constraintEnd_toEndOf="@+id/colorText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/colorView4"
        app:layout_constraintTop_toTopOf="@+id/colorView4"
        app:layout_constraintVertical_bias="0.56" />

    <TextView
        android:id="@+id/colorViewText"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rectangle"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/colorView"
        app:layout_constraintEnd_toEndOf="@+id/colorView"
        app:layout_constraintStart_toStartOf="@+id/colorView" />

    <TextView
        android:id="@+id/colorViewText2"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rectangle"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/colorView2"
        app:layout_constraintEnd_toEndOf="@+id/colorView2"
        app:layout_constraintStart_toStartOf="@+id/colorView2" />

    <TextView
        android:id="@+id/colorViewText3"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rectangle"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/colorView3"
        app:layout_constraintEnd_toEndOf="@+id/colorView3"
        app:layout_constraintStart_toStartOf="@+id/colorView3" />

    <TextView
        android:id="@+id/colorViewText4"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rectangle"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/colorView4"
        app:layout_constraintEnd_toEndOf="@+id/colorView4"
        app:layout_constraintStart_toStartOf="@+id/colorView4" />

    <ImageButton
        android:id="@+id/tool_bar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#009688"
        android:src="@drawable/ic_arrow_back_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/colorText"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>